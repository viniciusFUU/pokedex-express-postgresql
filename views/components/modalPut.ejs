<section class="modal-overlay" id="overlay">
    <div class="modal" id="modal">

        <div class="modal-header">
            <h3>Atualizar pokemon</h3>
            <a href="/" id="closeModalPut"><i class="bi bi-x-circle"></i></a>
        </div>

        <div class="modal-body">
            <form class="form-modal" action="/update/<%= pokemonPut.id %>" method="POST">
                <label for="nome">Nome:</label>
                <input type="text" id="nome" name="nome" value="<%= pokemonPut.nome %>">

                <label for="descricao">Descrição:</label>
                <input type="text" id="descricao" name="descricao" value="<%= pokemonPut.descricao %>">

                <label for="tipo">Tipo:</label>
                <input type="text" id="tipo" name="tipo" value="<%= pokemonPut.tipo %>">

                <label for="altura">Altura:</label>
                <input type="number" id="altura" name="altura" value="<%= pokemonPut.altura %>">

                <label for="peso">Peso:</label>
                <input type="number" id="peso" name="peso" value="<%= pokemonPut.peso %>">

                <label for="habilidade">Habilidade:</label>
                <input type="text" name="habilidade" id="habilidade" value="<%= pokemonPut.habilidade %>">

                <label for="imagem">Link da imagem:</label>
                <input type="text" id="imagem" name="imagem" value="<%= pokemonPut.imagem %>">

                <button id="btnCadastrar" type="submit">Atualizar</button>   
            </form>
        </div>

    </div>
</section>